{
    "route_name": "backend",
    "rules": [
        {
            "matches": [
                {
                    "path": {
                        "kind": "Prefix",
                        "value": "/api/",
                        "replace": "/"
                    }
                }
            ],
            "backends": [
                {
                    "host": {
                        "kind": "Host",
                        "host": "127.0.0.1"
                    },
                    "port": 9992
                }
            ]
        }
    ],
    "priority": 100
}